@model IEnumerable<WebApp.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-12 col-md-offset-1">
    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <div class="row">
                <div class="col col-xs-6">
                    <h3 class="panel-title">Movies Lists</h3>
                </div>
                <div class="col col-xs-6 text-right">
                    <a class="btn btn-primary"  asp-action="Create" role="button">Create New Movie</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-list">
                <thead>
                    <tr>
                        <th><em class="fa fa-cog"></em></th>
                        <th>
                            @Html.DisplayNameFor(model => model.PosterPath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OriginalTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OriginalLanguage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReleaseDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td align="center">
                                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id"><em class="fa fa-pencil"></em></a>
                            </td>
                            <td>
                                <div class="image-movie-logo">
                                    <img src="@item.PosterPath" asp-append-version="true">
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OriginalTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OriginalLanguage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReleaseDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col col-xs-4">
                   Total Records : @Model.Count()
                </div>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

